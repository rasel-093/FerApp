<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_background"
    android:padding="16dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/capturedIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="capturedImage"
        android:src="@drawable/captured_image_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/emotion_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/emotion_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/timestamp_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textSize="14sp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/timestamp_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/advice_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advice: "
                android:paddingTop="8dp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/advice_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingTop="8dp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>


